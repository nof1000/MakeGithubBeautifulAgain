{
  "manifest_version": 2,
  "name": "Beauthub",
  "version": "1.0.5",
  "description": "Let's Make Github Beautiful Again!",
  "icons": {
    "32": "assets/icon@1x.png",
    "64": "assets/icon@2x.png",
    "128": "assets/icon@3x.png",
    "256": "assets/icon@4x.png"
  },
  "background": {
    "scripts": [ "scripts/background.js" ]
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Select a Github Theme",
    "default_icon": {
      "32": "assets/icon@1x.png",
      "64": "assets/icon@2x.png",
      "128": "assets/icon@3x.png",
      "256": "assets/icon@4x.png"
    }
  },
  "permissions": [
    "*://github.com/*",
    "*://*.github.com/*",
    "storage",
    "tabs"
  ]
}
